<%= error_messages_for 'privilege' %>

</style>
<!--[form:Privilege]-->
<p>
	<b><label for="">ID</label></b><br/>
	<%= text_field 'privilege', 'id', {:readonly=>"readonly"}%>
</p>
<p>
	<b><label for="">権限名</label></b><br/>
	<%= text_field 'privilege', 'name' %>
</p>
<p>
	<b><label for="">コントローラ</label></b><br/>
	<%= text_field 'privilege', 'controller' %>
</p>
<p>
	<b><label for="">アクション</label></b><br/>
	<%= text_field 'privilege', 'action' %>
</p>
<p>
	<b><label for="">ソート順</label></b><br/>
	<%= text_field 'privilege', 'sort_order' %>
</p>
<p>
	<b><label for="">親ID</label></b><br/>
	<%= select_tag "privilege[parent_id]",
		options_for_select(@parent_privileges, @privilege.parent_id ) %>
</p>
<p>
	<b><label for="">メニュータイプ</label></b><br/>
	<select id="privilege_node_type", name="privilege[node_type]" >
		<option value="menu" <%= 'selected' unless @privilege.is_menu? %>>メニュー</option>
		<option value="menu_item"  <%= 'selected' if @privilege.is_item? %>>メニューアイテム</option>
	</select>
</p>

<!--[eoform:role]-->

