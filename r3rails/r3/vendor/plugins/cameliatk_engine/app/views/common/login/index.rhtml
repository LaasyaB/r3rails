<% @title = "ログイン" %>
<% @skip_header = true %>
<br/>
<br/>
<br/>
<br/>
<br/>
<br/>
<div class="centering">
	<table style="text-align:left;vertical-align:middle;">
		<tr>
			<td>
				<%= image_tag "#{$LOGO[:login]}", {:style=>"margin-right:10px;"} %>
			</td>
			<td>
				<table>
					<%= form_remote_tag(:url => {:controller => "common/login", :action => "login" },
										:before => "if(Cameliatk.alertIfProcessing()){return false};$('loading').show();",
								 		:html => {:id =>"login_form", :autocomplete=>"off"}) %>
					<tr>
						<td>ID:</td>
						<td><%= text_field_tag "login_id", "", {:size=>10 , :maxlength=>20, :class => "", :style => "ime-mode:off;" } %></td>
					</tr>
					<tr>
						<td>Password:</td>
						<td><%= password_field_tag "password", "", {:size=>10 , :maxlength=>20, :class => ""} %></td>
					</tr>
				</table>
			</td>
		</tr>
	</table>
	<div style="height:20px;margin-top:10px;">
		<%= submit_tag "ログイン", {:id => "do_login", :onclick => ""} %>
		<%= button_to_function "キャンセル", "$('login_id').value='';$('password').value='';$('login_form').focusFirstElement();" %>
	</div>
	
	<div style="margin-top:30px;width:350px;">
		<%= link_to "初めての方はこちら",
			{:controller => "common/user", :action=>"registration"},
			{:id => 'go_user_regist', :onclick => "$('loading').show()" } %>
	
		<script type="text/javascript">
			$('login_form').focusFirstElement();
		</script>
	</div>
</div>
