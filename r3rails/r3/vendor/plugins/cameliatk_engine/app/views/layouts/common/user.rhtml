	.user_property_alert {
		color:red;
		font-weight:bold;
		font-size:xx-small;
	}
	</style>
</head>
<body>
<%= render :partial => "common/loading" %>
<% unless @skip_header %>
<%= render :partial => "common/header" %>
<% end %>
<div class="contents">
  <div id="contents_main" class="main">
  <%= @content_for_layout %>
  </div>
</div> 
<%= render :partial => "common/footer" %>
<%= render :partial => "common/messages" %>

