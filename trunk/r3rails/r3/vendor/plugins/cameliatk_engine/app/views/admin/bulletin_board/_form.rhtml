<%= error_messages_for 'bulletin_board' %>

</style>
<!--[form:BulletinBoard]-->
<p>
	<b><label for="">タイトル</label></b><br/>
	<%= text_field 'bulletin_board', 'title', {:size => 80}%>
</p>
<p>
	<b><label for="">記事</label></b><br/>
	<%= text_area 'bulletin_board', 'comment', :cols=>80, :rows=>20 %>
</p>
<p>
	<b><label for="">公開期間</label></b><br/>
	<%= text_field_tag 'bulletin_board[opened_at]', f_ymd(@bulletin_board.opened_at) , cameliatk_sdate_options %>
	～
	<%= text_field_tag 'bulletin_board[closed_at]', f_ymd(@bulletin_board.closed_at) , cameliatk_sdate_options %>
</p>
<p>
	<b><label for="user_enable">効力:</label></b><br/>
	<select id="user_enable" name="user[enable]">
		<option value="false" <%= 'selected' unless @bulletin_board.enable %>>無効</option>
		<option value="true"  <%= 'selected' if @bulletin_board.enable %>>有効</option>
	</select>
</p>
<p>
</p>
<p>
</p>

<!--[eoform:role]-->

