<% @title="ロールの詳細表示" %>
<style>
.inplaceeditor-form{
    margin-left:10px;
	text-decoration:underline;
}
ul.priveleges {
	margin:0px;
	padding:0px;
}
ul.priveleges li{
    list-style:none;
    padding-left:20px;
	font-size: x-small;
}
</style>

<p>
	<b><label for="role_name">ロール名</label></b><br/>
	<%= h @role.name  %>
</p>

<%= privilege_tree_helper_script %>
<p>
	<b><label for="">権限</label></b><br/>
	<ul class="priveleges">
	<%= privileges_tree @role.top_nodes, @role.all_privilege_id_list, false %>
	</ul>
</p>

<%= cameliatk_link_to '編集', {:action => 'edit', :id => @role}, {:class => "command"} %> |
<%= cameliatk_link_to '戻る', {:action => 'list'}, {:class => "command"} %>
