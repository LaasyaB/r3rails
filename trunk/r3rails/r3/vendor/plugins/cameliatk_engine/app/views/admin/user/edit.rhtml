<% @title="ユーザの編集・登録" %>

<% cameliatk_form_tag({:action => 'update', :id => @user},{:id=>"user_edit_form"})do %>
  <%= render :partial => 'form' %>
  <%= submit_tag '編集内容を登録する' %>
<% end %>
<script type="text/javascript">
	$('user_edit_form').focusFirstElement();	
</script>

<%= cameliatk_link_to '表示', {:action => 'show', :id => @user}, {:class => "command"} %> |
<%= cameliatk_link_to '戻る', {:action => 'list'}, {:class => "command"} %>
