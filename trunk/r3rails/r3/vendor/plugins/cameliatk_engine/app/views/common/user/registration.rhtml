<% @title = "ユーザ登録" %>
<% @skip_header = true %>
<br/>
<div class="centering"><%= @title %></div>
<div class="centering">
	<% remote_form_for :user, @user, :url => {:controller=>'', :action=>'regist_new_user'}, :html => {:id => 'user_registration_form', :autocomplete=>"off", :cameliatk_loading=>true } do |f|%>
	<table>
		<tr>
			<td>
				ログインID
			</td>
			<td>
				<%= f.text_field :login_id , :size=>22, :maxlength=>20, :autocomplete=>"off", :style=>"ime-mode:disabled;" %>
			</td>
			<td class="user_property_alert">
				必須項目
			</td>
		</tr>
		<tr>
			<td>
				お名前
			</td>
			<td>
				<%= f.text_field :name , :size=>22, :maxlength=>20, :style=>"ime-mode:on;" %>
			</td>
			<td class="user_property_alert">
				必須項目
			</td>
		</tr>
		<tr>
			<td>
				パスワード
			</td>
			<td>
				<%= password_field_tag "password", "", {:size=>22 , :maxlength=>20, :class => ""} %>
			</td>
			<td class="user_property_alert">
				必須項目
			</td>
		</tr>
		<tr>
			<td>
				パスワード(確認)
			</td>
			<td>
				<%= password_field_tag "password_verify", "", {:size=>22 , :maxlength=>20, :class => ""} %>
			</td>
			<td class="user_property_alert">
				必須項目
			</td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td>&nbsp;</td>
			<td>&nbsp;</td>
		</tr>
		<tr>
			<td style="hight:80px;" colspan="3" align="left">
				<%= submit_tag "登録する", {:id => "user_regist", :style=>"float:left;"} %>
				<div style="float:right;">
					<%= cameliatk_link_to "登録せずに戻る", $VIEWS[:CURRENT],{:id => 'go_current'} %>
				</div>
			</td>
		</tr>
	</table>
	<% end %>
</div>
<script type="text/javascript">
	$('user_registration_form').focusFirstElement()
</script>
